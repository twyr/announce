{
	"name": "announce",
	"displayName": "Announce",
	"description": "CLI Tool and NPM Library for announcing a release on Github / Gitlab / etc. and on NPM",
	"homepage": "https://twyr.github.io/announce",
	"license": "MITNFA",
	"readme": "README.md",
	"version": "0.0.1-dev.0",
	"keywords": [
		"automation",
		"announcement",
		"changelog",
		"cli",
		"console",
		"git",
		"github",
		"gitlab",
		"npm",
		"package",
		"publish",
		"release",
		"release-automation",
		"release-helper",
		"release-workflow",
		"semantic-release",
		"semantic-version",
		"semver",
		"semver-release",
		"terminal",
		"twyr",
		"version"
	],
	"author": {
		"name": "Vish Desai",
		"email": "shadyvd@hotmail.com",
		"url": "https://github.com/shadyvd"
	},
	"contributors": [
		{
			"name": "Vish Desai",
			"email": "shadyvd@hotmail.com",
			"url": "https://github.com/shadyvd"
		}
	],
	"maintainers": [
		{
			"name": "Vish Desai",
			"email": "shadyvd@hotmail.com",
			"url": "https://github.com/shadyvd"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twyr/announce.git"
	},
	"bugs": {
		"url": "https://github.com/twyr/announce/issues"
	},
	"main": "./bin/announce.js",
	"engines": {
		"node": ">=14.0.0"
	},
	"directories": {
		"doc": "doc",
		"test": "tests"
	},
	"dependencies": {
		"bluebird": "3.7.2",
		"commander": "6.1.0",
		"cosmiconfig": "7.0.0",
		"debug": "4.1.1",
		"fdir": "4.1.0",
		"please-upgrade-node": "3.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "11.0.0",
		"@commitlint/config-conventional": "11.0.0",
		"chai": "4.2.0",
		"chai-arrays": "2.2.0",
		"chai-bignumber": "3.0.0",
		"chai-datetime": "1.7.0",
		"chai-html": "1.3.0",
		"chai-json": "1.0.0",
		"chai-json-equal": "0.0.1",
		"chai-json-schema": "1.5.1",
		"dependency-cruiser": "9.13.1",
		"docdash": "1.2.0",
		"eslint": "7.9.0",
		"eslintcc": "0.4.4",
		"eslint-plugin-html": "6.1.0",
		"eslint-plugin-jsdoc": "30.4.2",
		"eslint-plugin-json": "2.1.2",
		"eslint-plugin-mocha": "8.0.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-security": "1.4.0",
		"eslint-plugin-security-node": "1.0.12",
		"grunt": "1.3.0",
		"grunt-contrib-clean": "2.0.0",
		"grunt-coveralls": "2.0.0",
		"grunt-env": "1.0.1",
		"grunt-eslint": "23.0.0",
		"grunt-exec": "3.0.0",
		"grunt-jsbeautifier": "0.2.13",
		"grunt-xmlstoke": "0.7.1",
		"husky": "4.3.0",
		"jsdoc": "3.6.5",
		"lint-staged": "10.4.0",
		"load-grunt-tasks": "5.1.0",
		"mocha": "8.1.3",
		"mocha-junit-reporter": "2.0.0",
		"mocha-prepare": "0.1.0",
		"mocha-prepare-promise": "0.0.2",
		"npm-run-all": "4.1.5",
		"nyc": "15.1.0",
		"sloc": "0.2.1"
	},
	"scripts": {
		"build": "npx grunt",
		"clean": "mkdir -p ./docs && rm -rf ./docs && mkdir -p ./buildresults && rm -rf ./buildresults && mkdir -p ./logs && touch ./logs/init.log && rm -f ./logs/*.log && mkdir -p ./.nyc_output && rm -rf ./.nyc_output && mkdir -p ./depcruise && rm -rf ./depcruise && mkdir -p ./stats && rm -rf ./stats",
		"docs": "npx jsdoc --verbose --configure ./.jsdocrc.json",
		"lint": "npx npm-run-all --continue-on-error --serial lint:*",
		"lint:js": "npx eslint .",
		"stats": "mkdir -p stats && npx npm-run-all --continue-on-error --serial stats:cc* stats:sloc*",
		"stats:cc-text": "npx eslintcc --average --greater-than F --format text --no-inline-config . | tee ./stats/complexity.txt",
		"stats:cc-json": "npx eslintcc --average --greater-than F --format json --no-inline-config . > ./stats/complexity.json",
		"stats:sloc-table": "npx sloc --details --format cli-table --exclude '.circleci|.github|.vscode|buildresults|coverage|depcruise|deploy|docs|jsdoc_default|log|node_modules|stats|ecosystem.config.js|gruntfile.js|test/setup_mocks.js|test-results.xml' --keys source,comment,todo,empty,total . | tee ./stats/sloc.txt",
		"stats:sloc-json": "npx sloc --details --format json --exclude '.circleci|.github|.vscode|buildresults|coverage|depcruise|deploy|docs|jsdoc_default|log|node_modules|stats|ecosystem.config.js|gruntfile.js|test/setup_mocks.js|test-results.xml' . > ./stats/sloc.json",
		"test": "npx npm-run-all --continue-on-error --serial test:run test:coverage test:deps",
		"test:coverage": "NODE_ENV=test npx nyc --reporter=cobertura --reporter=lcovonly --reporter=text --reporter=text-summary mocha",
		"test:deps": "mkdir -p depcruise && npx depcruise --config ./.dependency-cruiser.js --output-type json . -f ./depcruise/deps.json && npx depcruise-fmt --output-type archi ./depcruise/deps.json | dot -T svg > ./depcruise/archi.svg && npx depcruise-fmt --output-type err-html -f ./depcruise/error.html ./depcruise/deps.json",
		"test:run": "NODE_ENV=test npx mocha --reporter=spec"
	},
	"bin": {
		"announce": "./bin/announce.js"
	}
}
